{
  "jpsType": "install",
  "jpsVersion": "0.99",
  "id": "mosquitto-dev",
  "name": "Eclipse Mosquitto",
  "logo": "https://github.com/jelastic-jps/mosquitto/raw/master/images/mosquitto-logo.png",
  "categories": [
    "apps/dev-and-admin-tools",
    "apps/dev-tools"
  ],
  "description": {
    "text":"An open source <a href='http://mqtt.org/' target='_blank'>MQTT</a> message broker server with publish/subscribe messaging model for the IoT (Internet of Things) networks management",
    "short":"An open source MQTT message broker server for IoT (Internet of Things) networks management"
    },
  "nodes": [
    {
      "cloudlets": 8,
      "displayName": "Mosquitto",
      "image": "eclipse-mosquitto",
      "nodeGroup": "cp"
    }
  ],
  "onInstall": {
    "executeScript": {
      "type": "js",
      "script": "https://raw.githubusercontent.com/dzotic9/mosquitto/master/scripts/addEndpoint.js",
      "params": {
        "nodeGroup": "cp",
        "name": "Mosquitto",
        "port": 1883
      }
    }
  },
  "success": {
    "text": "To access your Mosquitto MQTT server, refer to the <b>${env.domain}</b> domain name through <ul><li><b><span id='mosquitto-endpoints'></span><img src='https://raw.githubusercontent.com/jelastic-jps/smartfoxserver-2x/master/images/000000-0.png' onload=\"!function(){var e,t=JProjectManager.GetActiveProject().GetAppByAppid("${env.appid}"),o=t.GetNodesByGroup("cp"),n=t.GetDomain()&&o.length,r="";!function i(){var t=Ext.get("mosquitto-endpoints");if(t)for(e=0;n>e;e+=1)o[e].endpoints.forEach(function(e){r=e.publicPort});else i.defer(100);r?t.update("either"+r+" port (for external access from wherever in the Internet)"):console.log(t)}()}();\"/></b></li><li> <span>*1883*</span> port (for connecting within internal Plaform network)</li></ul>",
    "email": false
  }
}
